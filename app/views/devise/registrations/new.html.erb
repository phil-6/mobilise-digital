<div class="section header">
  <div class="row full-height">
    <%= render partial: 'layouts/brand_half_page' %>
    <div class="col-lg-6 md-form text-center">
      <%= render partial: 'layouts/alerts' %>
      <h2>Sign up</h2>

      <%#= devise_error_messages! %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row p-0">
          <div class="col">
            <div class="form-group floating-label">
              <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: " First name", :required => true %>
              <%= f.label :first_name %>
            </div>
          </div>
          <div class="col">
            <div class="form-group floating-label">
                <%= f.text_field :last_name, class: "form-control", placeholder: " Last name", :required => true %>
                <%= f.label :last_name %>
            </div>
          </div>
        </div>

        <div class="form-group floating-label">
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: " Email", :required => true %>
          <%= f.label :email %>
        </div>

<!--        <%# if @minimum_password_length %><em>(<%#= @minimum_password_length %> characters minimum)</em><%# end %>-->
        <div class="form-group floating-label">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: " Password (6 characters minimum)", :required => true %>
          <%= f.label :password %>
        </div>

        <div class="form-group floating-label">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: " Password again", :required => true %>
          <%= f.label :password_confirmation %>
        </div>

        <div class="form-group agreements text-left">
          <div class="row p-0">
            <div class="col-md-6 form-check checkbox-lg">
              <%= f.check_box :gdpr_agreement %>
              <%= f.label :gdpr_agreement, "#{link_to 'GDPR Agreement', "/gdpr_agreement"}.".html_safe, class: "form-check-label" %>
            </div>

            <div class="col-md-6 form-check checkbox-lg">
              <%= f.check_box :website_terms_agreement%>
              <%= f.label :website_terms_agreement, "#{link_to 'Website Terms', "/website_terms"}.".html_safe, class: "form-check-label" %>
            </div>
          </div>
          <div class="row p-0">
            <div class="col-md-6 form-check checkbox-lg">
              <%= f.check_box :job_email_agreement %>
              <%= f.label :job_email_agreement, "#{link_to 'Job Alert Agreement', "/email_terms"}.".html_safe, class: "form-check-label" %>
            </div>

            <div class="col-md-6 form-check checkbox-lg">
              <%= f.check_box :marketing_email_agreement %>
              <%= f.label :marketing_email_agreement, "#{link_to 'Marketing Agreement', "/email_terms"}.".html_safe, class: "form-check-label" %>
            </div>
          </div>
        </div>


        <div class="actions form-group">
          <%= f.submit "Sign up", class: "btn btn-secondary" %>
        </div>

        <hr />
        <div class="other-actions">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>