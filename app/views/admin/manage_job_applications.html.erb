<div id="fullpage">

  <div class="section global-nav">
    <div class="row justify-content-end">
      <%= render partial: 'layouts/nav' %>
    </div>
  </div>

  <div class="admin-content brand-background text-center">
    <section class="row full-width container-fluid">
      <div class="col">
        <%= render partial: 'layouts/alerts' %>
        <h2>Job Application Details</h2>
      </div>
      <div class="row py-0">
        <div class="col-md-6">
          <h3 class="pt-3">Job Details</h3>
          <h6><strong><em>Job Title</em></strong></h6>
          <h4> <%= @application.job.title %> </h4>
          <h6><strong><em>Job Description</em></strong></h6>
          <p> <%= @application.job.description %> </p>
          <h6><strong><em>Job Requirements</em></strong></h6>
          <p> <%= @application.job.requirements %> </p>
          <%= link_to "Full Job Details", job_path(@application.job), :class => 'btn btn-sm btn-info' %>
        </div>

        <div class="col-md-6">
          <h3 class="pt-3">User Details</h3>
          <h6><strong><em>Name</em></strong></h6>
          <p> <%= @application.user.first_name %> <%= @application.user.last_name %> </p>
          <h6><strong><em>Uploaded Self Assessment &nbsp;&nbsp;</em>
            <% if @application.user.uploaded_self_assessment? %><i class="text-success fas fa-check"></i>
            <% else %> <i class="text-danger fas fa-times"></i>
            <% end %>
          </strong></h6>
          <h6><strong><em>Uploaded CV &nbsp;&nbsp;</em>
            <% if @application.user.uploaded_cv? %><i class="text-success fas fa-check"></i>
            <% else %> <i class="text-danger fas fa-times"></i>
            <% end %>
          </strong></h6>
          <h6><strong><em>Profile Completion &nbsp;&nbsp;</em><%= @application.user.profile_completion %>
            <% if @application.user.profile_completion? %>%
            <% else %><span class="text-danger">0%</span>
            <% end %>
          </strong></h6>
          <%= link_to "User Details", admin_user_path(@application.user), :class => 'btn btn-sm btn-info' %>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <%= @application.cover %>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <%= @application.status %>
          <%= @application.status_reason %>
        </div>
      </div>
    </section>
  </div>
</div>