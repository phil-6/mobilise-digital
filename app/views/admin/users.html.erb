<div id="fullpage">

  <div class="section global-nav">
    <div class="row justify-content-end">
      <%= render partial: 'layouts/nav' %>
    </div>
  </div>

  <section class="admin-content full-height brand-background text-center">
    <%= render partial: 'layouts/alerts' %>
    <div class="row">
      <div class="col">
        <h2>Manage Users</h2>
      </div>
      <table class="table table-striped table-dark table-hover table-sm">
        <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Confirmed</th>
          <th scope="col">Profile Completion</th>
          <th scope="col">Verified</th>
          <th scope="col">Sign Ins</th>
          <th scope="col">Last Sign In</th>
          <th scope="col">Manage</th>
        </tr>
        </thead>
        <tbody>
        <% User.all.order(:id).each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><a href="mailto:<%= user.email %>"><i class="fas fa-envelope"></i></a></td>
            <td>
              <% if user.confirmed_at? %><i class="fas fa-check"></i>
              <% else %><i class="fas fa-times"></i>
              <% end %></td>
            <td><%= user.profile_completion %>
              <% if user.profile_completion? %>%
              <% else %>0%
              <% end %></td>
            <td>
              <% if user.verified %><i class="fas fa-check"></i>
              <% else %><i class="fas fa-times"></i>
              <% end %></td>
            <td><%= user.sign_in_count %></td>
            <td><%= user.last_sign_in_at %></td>
            <td><a href="/admin/users/<%= user.id %>"><i class="fas fa-pen"></i></a></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div> <!--End Row-->
  </section> <!--End Section-->

</div>
