<div id="fullpage" >
  <div class="section header">
    <div class="row global-nav justify-content-end">
      <%= render partial: 'layouts/nav' %>
    </div>
    <div class="row admin-table full-height">

      <div class="brand  text-center">
        <h2>Manage Users</h2>

        <table class="table table-striped table-dark table-hover table-sm">
          <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Confirmed</th>
            <th scope="col">Profile Completion</th>
            <th scope="col">Verified</th>
            <th scope="col">Sign Ins</th>
            <th scope="col">Last Sign In</th>
            <th scope="col">Manage</th>
          </tr>
          </thead>
          <tbody>
          <% User.all.each do |user| %>
            <tr>
              <th scope="row"><%= user.id %></th>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.confirmed_at? %></td>
              <td><%= user.profile_completion %><% if user.profile_completion? %>%<%else %>0%<% end %></td>
              <td><%= user.verified %></td>
              <td><%= user.sign_in_count %></td>
              <td><%= user.last_sign_in_at %></td>
              <td><a href="/admin/user/<%= user.id %>"><i class="fas fa-pen"></i></a></td>
            </tr>
          <% end %>
          </tbody>
        </table>


      </div>
    </div>
  </div>
</div>